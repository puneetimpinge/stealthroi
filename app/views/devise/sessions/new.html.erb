<script>
  $(function() {
    var header = $(".header");
    $(window).scroll(function(e) {
      var scroll = $(window).scrollTop();
      if (scroll >= 150) {
        header.addClass("shrink");
        e.preventDefault();
      } else {
        header.removeClass("shrink");
      }
    });
  });
</script>