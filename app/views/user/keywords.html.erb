<div id="wrapper">
    <%= render :partial => "/shared/left_side_menu" %>
    <div id="page-wrapper" class="gray-bg sidebar-content">
        <%= render :partial => "/shared/header" %>
        <div class="wrapper wrapper-content">
        	<div class="row">
            	<div class="col-lg-12 main-heading">
                	<h1>Keywords</h1>
                </div>
            </div>
            
            <div class="row">
            	<div class="col-lg-12">
                	<!-- <div class="coming_soon">
                    	Coming Soon
                    </div> -->
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Active Advertisements with keywords</h5>
                            <div class="ibox-tools">
                                <a class="collapse-link">
                                    <i class="fa fa-chevron-up"></i>
                                </a>
                                
                                <a class="close-link">
                                    <i class="fa fa-times"></i>
                                </a>
                            </div>
                        </div>
                        <div class="ibox-content">
                            <div class="table-responsive" id="tableDiv">
                            <table class="table table-striped table-bordered table-hover dataTables-example" >
                                <thead>
                                    <tr>
                                        <th>Advertisement Name</th>
                                        <th>Target</th>
                                        <th>Total Keywords</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%@data.each do |obj|%>
                                        <tr class="gradeX">
                                            <td><a href="" data-toggle="modal" data-target="#campaignModal" data-adid="<%=obj.group_id%>" onclick="campaignDetails2(<%=obj.group_id%>)"><%=obj.name%></a></td>
                                            <td><a href="<%="#{obj.target_domain}/#{obj.target_page}"%>"><%="#{obj.target_domain}/#{obj.target_page}"%></a></td>
                                            <td>0</td>
                                        </tr>
                                    <%end%>
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%= render :partial => "/shared/footer" %>
    </div>
</div>
<script type="text/javascript">
    $('.dataTables-example').dataTable({
        responsive: true
    });
</script>